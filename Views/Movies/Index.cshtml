@model IEnumerable<Fall2024_Assignment3_json10.Models.Movie>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <script src="~/js/script.js"></script>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <section id="movies-section">
        <h2 id="regular-movies-title">Movies</h2>
        <table id="movies-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>IMDB</th>
                    <th>Poster</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Year</td>
                        <td><a href="@movie.IMDBLink" target="_blank">Link</a></td>
                        <td><img src="@movie.Poster" alt="@movie.Title" /></td>
                        <td>
                            <button type="button"onclick="location.href='@Url.Action("Edit", "Movies", new { id = movie.Id })'">Edit</button>
                            <button onclick="openDeleteModal(@movie.Id)" class="btn btn-danger">Delete</button>
                            <button type="button" onclick="showReviews('@movie.Title')">Reviews</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button onclick="window.location.href = '@Url.Action("Create")';">Add Movie</button>
        <button onclick="window.location.href = '@Url.Action("Index", "Home")';">Home</button>
    </section>

    <section id="reviews-section" style="display:none;">
        <ul id="reviews-list"></ul>
        <table id="sentiment-table">
            <tr>
                
        </table>
        @* <p><strong>Overall Sentiment:</strong> <span id="overall-sentiment"></span></p> *@
        <button onclick="backToMoviesFunc()">Back to Movies</button>
    </section>

    <form id="csrf-form" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <h3>Confirm Delete</h3>
            <p>Are you sure you want to delete this actor?</p>
            <form id="deleteForm" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" id="deleteActorId" name="id" />
                <button type="button" onclick="closeDeleteModal()" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <style>
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 10;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 300px;
        }

        .btn {
            margin: 5px;
        }

}
    </style>

    <script>
        function openDeleteModal(actorId) {
            document.getElementById('deleteActorId').value = actorId;
            document.getElementById('deleteModal').style.display = 'flex';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }
    </script>

</body>

</html>
