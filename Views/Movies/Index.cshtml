@model IEnumerable<Fall2024_Assignment3_json10.Models.Movie>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <script src="~/js/script.js"></script>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <section id="movies-section">
        <h2>Movies</h2>
        <table id="movies-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>IMDB</th>
                    <th>Poster</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Year</td>
                        <td><a href="@movie.IMDBLink" target="_blank">Link</a></td>
                        <td><img src="@movie.Poster" alt="@movie.Title" /></td>
                        <td>
                            <button type="button"
                                onclick="location.href='@Url.Action("Edit", "Movies", new { id = movie.Id })'">Edit</button>
                            <button type="button" onclick="deleteMovie(@movie.Id)">Delete</button>
                            <button type="button" onclick="showReviews('@movie.Title')">Reviews</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button onclick="window.location.href = '@Url.Action("Create")';">Add Movie</button>
        <button onclick="window.location.href = '@Url.Action("Index", "Home")';">Home</button>
    </section>

    <section id="reviews-section" style="display:none;">
        <h2>AI-Generated Reviews</h2>
        <ul id="reviews-list"></ul>
        <table id="sentiment-table">
            <tr>
                <th>Review</th>
                <th>Sentiment</th>
            </tr>
        </table>
        <p id="overall-sentiment"></p>
        <button onclick="backToMoviesFunc()">Back to Movies</button>
    </section>

    <form id="csrf-form" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

</body>

</html>
