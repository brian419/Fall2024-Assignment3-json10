@model IEnumerable<Fall2024_Assignment3_json10.Models.Actor>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/script.js"></script>
</head>

<body>
    <section id="actors-section">
        <h2 id="linkactorsmovies-actors-title">Actors</h2>
        <table id="actors-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>IMDB</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td>@actor.Name</td>
                        <td>@actor.Gender</td>
                        <td>@actor.Age</td>
                        <td><a href="@actor.IMDBLink" target="_blank">Link</a></td>
                        <td><img src="@actor.Photo" alt="@actor.Name" /></td>
                        <td>
                            <button type="button"
                                onclick="location.href='@Url.Action("Edit", "Actors", new { id = actor.Id })'">Edit</button>
                            <button onclick="openDeleteModal(@actor.Id)" class="btn btn-danger">Delete</button>
                            <button type="button"
                                onclick="location.href='@Url.Action("Details", "Actors", new { id = actor.Id })'">Details</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="button-container">
            <button id="actors-button-1" onclick="window.location.href = '@Url.Action("Create")'">Add Actor</button>
            <button id="actors-button-2" onclick="window.location.href = '@Url.Action("Index", "Home")';">Home</button>
        </div>


    </section>

    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <h3>Confirm Delete</h3>
            <p>Are you sure you want to delete this actor?</p>
            <form id="deleteForm" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" id="deleteActorId" name="id" />
                <button type="button" onclick="closeDeleteModal()" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <style>
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 10;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 300px;
        }

        .btn {
            margin: 5px;
        }
    </style>

    <script>
        function openDeleteModal(actorId) {
            document.getElementById('deleteActorId').value = actorId;
            document.getElementById('deleteModal').style.display = 'flex';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }
    </script>
</body>

</html>
