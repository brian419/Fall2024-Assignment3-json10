@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Link Actors to Movies</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <h2>Link Actors to Movies</h2>

    <form id="linkForm" method="post" asp-action="LinkActorsToMovies">
        <div>
            <label for="actorId">Select Actor:</label>
            <select id="actorId" name="actorId">
                @foreach (var actor in ViewBag.Actors)
                {
                    <option value="@actor.Id">@actor.Name</option>
                }
            </select>
        </div>

        <div>
            <label for="movieId">Select Movie:</label>
            <select id="movieId" name="movieId">
                @foreach (var movie in ViewBag.Movies)
                {
                    <option value="@movie.Id">@movie.Title</option>
                }
            </select>
        </div>

        <button type="submit">Link Actor to Movie</button>
    </form>
</body>

</html>
